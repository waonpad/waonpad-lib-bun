{
  "name": "@waonpad/waonpad-lib-bun",
  "version": "0.0.0",
  "author": "waonpad",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waonpad/waonpad-lib-bun.git",
    "directory": ""
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "lefthook": "^1.8.1",
    "rimraf": "^6.0.1",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "bugs": {
    "url": "https://github.com/waonpad/waonpad-lib-bun/issues"
  },
  "description": "",
  "files": [
    "src",
    "dist",
    "tsconfig.json",
    "!**/*.test.*"
  ],
  "homepage": "https://github.com/waonpad/waonpad-lib-bun#readme",
  "keywords": [],
  "license": "Unlicense",
  "private": false,
  "scripts": {
    "prepare": "lefthook install",
    "prepublishOnly": "$npm_execpath run t && $npm_execpath run test && $npm_execpath run build",
    "fmt": "biome format --write .",
    "lnt": "biome lint --write .",
    "che": "biome check --write .",
    "test": "vitest run",
    "test:w": "vitest watch --silent",
    "test:ci": "vitest run --silent",
    "t": "tsc --noEmit",
    "build": "$npm_execpath run clean && $npm_execpath run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "publish": "npm publish --access public",
    "v:patch": "npm version patch",
    "v:minor": "npm version minor",
    "v:major": "npm version major"
  },
  "sideEffects": false,
  "type": "module",
  "dependencies": {
    "@waonpad/waonpad-lib": "^0.2.2"
  },
  "exports": {
    ".": "./src/*"
  }
}
